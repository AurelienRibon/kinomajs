<program xmlns="http://www.kinoma.com/kpr/1">

	<!-- some cosmetic stuff -->
	<skin id="skinMainContainer" color="#808080"/>
	<skin id="skinTextLabel" color="black"/>
	<style id="stlTextLabel" font="42px Gill Sans" color="white" align="center"/>
	
	<!-- container heirarchy -->
	<container id="MainContainer" skin="skinMainContainer" left="15" right="15" top="25" bottom="25" active="true">
		<label string="'Hello World'" style="stlTextLabel" skin="skinTextLabel" left="30" right="30" top="50" active="true"/>
	</container> 
	
	<!-- application script -->
	<script><![CDATA[
		application.add(new MainContainer);
	]]></script>
</program>