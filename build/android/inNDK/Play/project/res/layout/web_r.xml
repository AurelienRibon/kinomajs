<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/web_mainlayout_r"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:orientation="vertical"
    android:layout_gravity="center"
	android:theme="@style/Theme.NoBackground">

	<!-- 		
		android:theme="@style/Theme.NoBackground"
          	android:imeOptions="actionDone|flagNoAccessoryAction|flagNoEnterAction"
 -->
 <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/web_view_r"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1.0"
	/>

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:id="@+id/web_progresslayout_r"
	android:theme="@style/Theme.NoBackground">
 
 
 	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="60px"
		android:layout_gravity="center_vertical"
		android:id="@+id/web_progressparent_r"
		android:theme="@style/Theme.NoBackground">
 
		<ProgressBar
			android:layout_width="350px"
			android:layout_height="30px"
			android:layout_gravity="center"
			android:id="@+id/web_progress_r"
 			style="?android:attr/android:progressBarStyleHorizontal" />
 			
	<Button android:text=""
		android:drawableLeft="@drawable/web_return_icon"
		android:padding="2px"
		android:id="@+id/web_closebutton_r"
		android:layout_width="60px"
		android:layout_height="60px"
		android:layout_gravity="center_horizontal|right">
		</Button>
            
	</FrameLayout>
    
    

</LinearLayout>

</LinearLayout>